<Window x:Class="WPF_Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Controller"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle x:Name="rectLT" Fill="black" Width="400" HorizontalAlignment="Left" MouseEnter="rect_MouseEnter" MouseLeave="rect_MouseLeave"/>
        <Rectangle x:Name="rectRT" Fill="white" Width="400" HorizontalAlignment="Right" MouseEnter="rect_MouseEnter" MouseLeave="rect_MouseLeave"></Rectangle>

        <Rectangle x:Name="rectLB" Grid.Row="1" Fill="white" Width="400" HorizontalAlignment="Left" MouseEnter="rect_MouseEnter" MouseLeave="rect_MouseLeave"></Rectangle>
        <Rectangle x:Name="rectRB" Grid.Row="1" Fill="Black" Width="400" HorizontalAlignment="Right" MouseEnter="rect_MouseEnter" MouseLeave="rect_MouseLeave"></Rectangle>

    </Grid>
</Window>
